                                            <td>@item.Statuss</td>

                                        </tr>
                                    }*@
                                <tr>

                                    <td>1</td>
                                    <td><a href="#">Define Questionnaire</a></td>
                                    <td></td>
                                    <td>20%</td>
                                </tr>
                                <tr>

                                    <td>2</td>
                                    <td><a href="#">Interview customer</a></td>
                                    <td>1</td>
                                    <td>30%</td>
                                </tr>
                                <tr>

                                    <td>3</td>
                                    <td><a href="#">Gather requirement</a></td>
                                    <td>2</td>
                                    <td>20%</td>
                                </tr>
