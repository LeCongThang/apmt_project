
@{
    ViewBag.Title = "Step-Config";
    Layout = "~/Areas/Company/Views/Shared/_Layout.cshtml";
}
<section class="content">
    @Html.Partial("~/Areas/Company/Views/Activity/List_Creator.cshtml")
    <div class="abc">
        <h3 class="text-center">Analysis</h3>
        <div class="row">

            <div class="col-lg-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Setup</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" method="post" action="">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputFile">Type:</label>
                                <select>
                                    <option>Task</option>
                                    <option>Parent process</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Role:</label>
                                <input type="text" class="form-control pull-right" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Input:</label>
                                <input type="text" class="form-control pull-right" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Output:</label>
                                <input type="text" class="form-control pull-right" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Description:</label>
                                <textarea class="form-control pull-right" required></textarea>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Invite</button>
                            <button type="submit" class="btn btn-default">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Task</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Name</th>
                                    <th>Predecessor</th>
                                    <th>Weight</th>

                                </tr>
                            </thead>
                            <tbody>

                                @*@foreach (var item in lstUser)
                                    {
                                        <tr>
                                            <td>@item.FullName</td>
